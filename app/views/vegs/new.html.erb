<h1>Créer le plat végétarien</h1>

<%= form_for @veg do |f| %>
  <div class="form-group">
    <label> Nom du plat</label>
    <%= f.text_field :nom,class:'form-control' %>
  </div>
  <div class="form-group">
    <label> Contenu du plat</label>
    <%= f.text_area :description,class:'form-control' %>
  </div>
  <div class="form-group">
    <label> Prix du plat</label>
    <%= f.text_field :prix,class:'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Ajouter le plat</button>
  </div>
<% end %>
